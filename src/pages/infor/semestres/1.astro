---
import Layout from "@layouts/Layout.astro";
import { getCollection } from "astro:content";
const posts = await getCollection("posts");
const postCheck = posts.filter((e) => e.data.draft == false);
const postsMajor = postCheck.filter((e) => e.data.major.discriminant == "infor" && e.data.major.value.discriminant== "1");
---

<Layout title="Ingenieria Civil - Ideal">
    <div
        class="absolute inset-0 -z-10 h-full w-full bg-white bg-[linear-gradient(to_right,#f0f0f0_1px,transparent_1px),linear-gradient(to_bottom,#f0f0f0_1px,transparent_1px)] bg-[size:6rem_4rem]"
    >
        <div
            class="absolute bottom-0 left-0 right-0 top-0 bg-[radial-gradient(circle_500px_at_50%_200px,#C9EBFF,transparent)]"
        >
        <div class="m-20 ">
            <ul>
                {
                    postsMajor.map(
                        (post: { slug: string; data: { title: string } }) => (
                            <li class="list-disc">
                                <a
                                    href={`/posts/${post.slug}`}
                                    class="underline text-xl text-blue-600 font-medium"
                                >
                                    {post.data.title}
                                </a>
                            </li>
                        ),
                    )
                }
            </ul>
        </div>
            
        </div>
    </div>
</Layout>
<div class="mx-10"></div>
