---
const { name, authorCode, href } = Astro.props;
import { getCollection } from "astro:content";

//Authors Collection
const authors = await getCollection("authors");
// Filtramos solo los autores que pertenecen al post
const authorsOfPost = authors.filter((e) => authorCode.includes(e.id));
---

<a
    href={href}
    class="border font-bold hover:text-gray-700 hover:border-blue-600 border-slate-600 rounded-lg p-2 flex justify-between flex-row my-2 hover:underline"
>
    <h1>{name}</h1>
    <div class="lg:flex lg:flex-row hidden">
        {authorsOfPost.map((e) => <p class="mx-1">{e.data.name} </p>)}
    </div>
    <svg
        class="w-8 h-8"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        fill="none"
        viewBox="0 0 24 24"
    >
        <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M19 12H5m14 0-4 4m4-4-4-4"></path>
    </svg>
</a>
