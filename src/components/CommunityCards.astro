---
const {iconName, title, description} = Astro.props;
import { Icon } from "astro-icon/components";
---

<div class="flex flex-col items-center space-y-2 border-gray-200 p-4 rounded-lg">
    <Icon name={iconName} class="text-5xl" />
     <h2 class="text-xl font-bold">{title}</h2>
     <p class="text-sm text-gray-500 text-center dark:text-gray-400">
     {description}
     </p>
   </div>