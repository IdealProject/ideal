---
import { Icon } from "astro-icon/components";
import Search from "astro-pagefind/components/Search";
---

<!-- SEARCH BAR -->
<div
  onselectstart="return false"
  class="h-auto w-1/3 px-2 py-3 bg-zinc-200 flex items-center justify-center gap-x-3 rounded-lg cursor-text hover:bg-zinc-300 hover:transition-colors"
  id="search-bar"
>
  <Icon name="magnifyng-glass" />
  <span class="text-sm">Buscar recursos...</span>
  <div class="flex gap-x-1 items-center">
    <kbd class="text-[0.6rem] bg-zinc-300 p-1 rounded-md">Ctrl</kbd>
    <span class="text-xs">+</span>
    <kbd class="text-[0.6rem] bg-zinc-300 p-1 rounded-md">K</kbd>
  </div>
</div>

<!-- MODAL -->
<div
  id="search-modal"
  class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 flex items-center justify-center z-50"
>
  <div
    class="bg-white p-4 rounded-lg w-1/2 h-3/4 flex flex-col relative overflow-y-scroll gap-y-5"
  >
    <header class="flex justify-between items-center">
      <h2 class="text-2xl font-semibold">Buscar recursos</h2>
      <button id="close-modal" class="text-gray-500 hover:text-gray-900">
        <Icon name="cross" />
      </button>
    </header>
    <Search
      id="search"
      className="pagefind-ui w-full"
      uiOptions={{ showImages: false }}
    />
  </div>
</div>

<script>document.addEventListener("astro:after-swap", () => {
  initSearchModal();
});

function initSearchModal() {
  const searchBar = document.getElementById("search-bar");
  const searchModal = document.getElementById("search-modal");
  const closeModal = document.getElementById("close-modal");

  function focusSearchInput() {
    const searchInput = document.querySelector(
      "#search .pagefind-ui__search-input"
    ) as HTMLInputElement;

    if (searchInput) {
      searchInput.focus();
    } else {
      console.error("Search input not found.");
    }
  }

  function clearSearchInput() {
    const searchInput = document.querySelector(
      "#search .pagefind-ui__search-input"
    ) as HTMLInputElement;
    if (searchInput) {
      searchInput.value = "";
    }
  }

  if (searchBar) {
    searchBar.addEventListener("click", () => {
      if (searchModal) {
        searchModal.classList.remove("hidden");
        setTimeout(focusSearchInput, 100); // Asegurarse de que el modal esté completamente visible antes de enfocar
      }
    });
  }

  if (closeModal) {
    closeModal.addEventListener("click", () => {
      if (searchModal) {
        searchModal.classList.add("hidden");
        clearSearchInput();
      }
    });
  }

  document.addEventListener("keydown", (event) => {
    if (
      (event.ctrlKey || event.metaKey) &&
      event.key === "k" &&
      searchModal
    ) {
      event.preventDefault();
      searchModal.classList.remove("hidden");
      setTimeout(focusSearchInput, 100); // Asegurarse de que el modal esté visible antes de enfocar
    } else if (event.key === "Escape" && searchModal) {
      searchModal.classList.add("hidden");
      clearSearchInput();
    }
  });
}

// Inicializar modal la primera vez
initSearchModal();

</script>

<style>
  @media (max-width: 768px) {
    #search-modal .bg-white {
      width: 100%;
      height: 100%;
      border-radius: 0;
    }
  }
</style>
