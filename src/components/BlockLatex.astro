---
import katex from 'katex';

const { formula = '' } = Astro.props;
const html = katex.renderToString(formula, {throwOnError: false, displayMode: true});
---

<div 
  class="overflow-x-auto text-xs border border-solid border-gray-300 px-2 rounded-md md:border-none lg:border-none xl:border-none my-2">
  <span set:html={html}/>
</div>


<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/katex@0.15.1/dist/katex.css" 
/>
